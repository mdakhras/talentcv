
# Azure OpenAI Configuration
# Get these from your Azure OpenAI resource
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Alternative: Azure OpenAI Chat and Embedding Deployments (if using separate deployments)
AZURE_OPENAI_CHAT_DEPLOYMENT=your_chat_deployment_name
AZURE_OPENAI_EMBED_DEPLOYMENT=your_embedding_deployment_name

# Flask Backend Configuration
FLASK_PORT=5001
FLASK_ENV=development

# Database Configuration (Optional - for user management)
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Session Configuration (Optional)
SESSION_SECRET=generate_a_random_secret_key_here

# Application Settings
PORT=5000
NODE_ENV=development

# Logging
LOG_LEVEL=INFO
